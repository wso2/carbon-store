{{#if cuser.username}}
{{#if myAssets}}
<div class="row">
	<div class="span3">
		<h4><a href="#" class="my-assets-link"><i class="icon-bookmark"></i>{{> my-assets-title}}<i class="icon-angle-down pull-right"></i></a></h4>
		<div id="my-assets">
			{{#slice myAssets count="20" size="20"}}
			{{#each .}}
			<div class="row-fluid recently-added">
				{{#attributes}}
				{{#if ../isPublished}}
				<div class="span3">
					<a href="{{url "/asts"}}/{{../../type}}/details/{{../../id}}">
					<img src="{{#if ../../thumbnail}}{{url ""}}/storage/{{../../../type}}/{{../../../id}}/{{../../../thumbnail}}{{/if}}"></a>
				</div>
				<div class="span9">
					<strong><a href="{{url "/asts"}}/{{../../type}}/details/{{../../id}}">{{overview_name}}</a></strong>
					<small>by <a href="#">{{overview_provider}}</a></small>
					<span class="star-rating">
						<div class="asset-rating">
							<div class="asset-rating-{{../../rating.average}}star">

							</div>
						</div> </span>
				</div>
				{{else}}
				<div class="span3">
					<img src="{{#if ../../thumbnail}}{{url ""}}/storage/{{../../../type}}/{{../../../id}}/{{../../../thumbnail}}{{/if}}">
				</div>
				<div class="span9">
					<strong><a>{{overview_name}}</a></strong>
					<small>by <a>{{overview_provider}}</a></small>
					<span class="label label-unavailable">Currently Unavailable</span>
					
				</div>
				{{/if}}
				{{/attributes}}

			</div>
			{{/each}}
			<a class="link-view-all" href="{{url "/pages/my-items"}}">View all</a>
			<hr/>
			{{/slice}}
		</div>
	</div>
</div>
<hr>
{{/if}}
{{/if}}