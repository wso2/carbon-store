<div class="action-container right float-right">
    {{#with assets}}
    {{#attributes }}
        <a class="gray-button blue-button margin-left float-left" href="{{overview_url}}" target="_blank" data-placement="bottom" data-toggle="tooltip" title="{{>asset-overview-text}}"><span class="fa fa-code"></span></a>
    {{/attributes}}
    {{/with}}
    {{#if assets.isSubscribed}}
            <a id="btn-add-gadget" class="blue-button disabled-button margin-left float-left" href="#modal-add-gadget"
                   data-toggle="modal"
                   data-aid="{{assets.id}}" data-type="{{assets.type}}"> {{>processed-asset-text}}</a>
    {{else}}
        {{#if cuser.username}}
        <a id="btn-add-gadget" class="blue-button margin-left float-left" href="#modal-add-gadget"
                           data-toggle="modal"
                           data-aid="{{assets.id}}"
                           data-type="{{assets.type}}"> {{>process-asset-text }}</a>
        {{else}}
        <a id="btn-add-gadget" class="blue-button margin-left float-left" href='{{url ""}}{{getLoginUrl .}}'
                       data-toggle="modal"
                       data-aid="{{assets.id}}" data-type="{{assets.type}}"> {{>process-asset-text }}</a>
        {{/if}}
    {{/if}}

</div>



