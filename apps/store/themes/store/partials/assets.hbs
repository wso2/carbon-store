<div class="assets-container" >
    <h3 class="asset-type-default asset-title-separator asset-type-{{rxt.shortName}}">
        <div class="pagination top-asset-slideshow-pag assetSliderPag" id="top-asset-slideshow-pag-{{rxt.shortName}}"></div>
    </h3>
    {{#if assets}}
        <section>
        {{#each assets}}
            {{#attributes}}
            <div class="ctrl-wr-asset">
                <div class="itm-ast">
                    <a class="ast-img " href="{{tenantedUrl "/asts"}}/{{../type}}/details/{{../id}}">
                        <img class="img-responsive" src="{{#if ../thumbnail}}{{tenantedUrl ""}}/storage/{{../../type}}/{{../../id}}/{{../../thumbnail}}{{/if}}">
                    </a>
                    <div class="ast-content">
                        <div class="ast-title padding">
                            <a class="ast-name truncate" href="{{tenantedUrl "/asts"}}/{{../type}}/details/{{../id}}">{{overview_name}}</a>
                        <span class="ast-auth">{{overview_provider}}</span>
                        </div>
                        <div class="pull-left asset-rating-container">
                            <span class="asset-rating">
                                <div style="width:{{../ratingPx}}px"></div>
                            </span>
                        </div>
                        <div class="pull-right">
                            <div class="dropdown dropdown-asset-custom">
                                <a aria-expanded="false" role="button" data-toggle="dropdown" class="dropdown-toggle more-list" href="javascript:void(0)"></a>
                                <ul role="menu" class="dropdown-menu">
                                    <li>
                                        {{#mergeContext ssoParam=../../../sso userParam=../../../user thisAsset=../this}}
                                        {{>assets-utilization .}}
                                        {{/mergeContext}}

                                    </li>
                                    <li><a href="#">Download</a></li>
                                    <li><a href="#">More Details</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/attributes}}
        {{/each}}
        </section>
    {{else}}
        <div class="top-assets-empty-assert">{{t "We couldn't find anything for you."}}</div>
    {{/if}}
</div>

