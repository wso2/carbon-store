<!-- secondary header - app bar -->
<div id="nav" class="row wr-app-bar">
    <div class="col-md-9 wr-action-container">
        <div class="wr-asset-type-switcher">
            <a id="popoverExampleTwo" data-placement="bottom" class="ctrl-asset-type-switcher pull-left" href="#" data-original-title="" title="">
                <span class="btn-asset"></span>
            </a>

            <div class="popover menu fade bottom in">
                <div class="arrow"></div>
                <div class="popover-content">
                    {{#with navigationBar}}
                        {{#each types}}
                            <a class="ast-type-item {{#if selected}} selected {{/if}}" href="{{tenantedUrl ""}}{{this.listingUrl}}">
                                {{#if value.icon}}
                                <div style="background-image:url({{url ""}}{{ui.icon}})"></div>
                                {{else}}
                                <i class="{{ui.icon}}"></i>
                                {{/if}}
                                {{singularLabel}}
                            </a>
                        {{/each}}
                    {{/with}}
                </div>
            </div>
        </div><! menu Button -->
        <div class="search">
            {{#with searchBar}}
                {{>search .}}
            {{/with}}
        </div><!--search--->
    </div>
    <div class="col-xs-5 col-sm-5 col-lg-3 top-menu-right-custom right margin-top-sm">
        <!--<div class="inline-block  margin-right"> <img src="/store/themes/store/img/icons/Notifications.png"></div>-->
        <!--<div class="inline-block margin-right"> <img src="/store/themes/store/img/icons/Settings.png"></div>-->
        <div class="inline-block">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="myItemsToggle">
                <span class="fw-stack fw-lg  fw-inverse">
                    <i class="fw fw-ring fw-stack-2x"></i>
                    <i class="fw fw-store fw-stack-1x"></i>
                </span>
                </a>
            <ul class="dropdown-menu dropdown-account" role="menu" aria-labelledby="dLabel">
                <li class="uppercase"> <a href="{{url "/pages/my-items"}}">My Subscription</a></li>
                {{#hasAppPermission . key="APP_MYITEMS" username=cuser.username tenantId=cuser.tenantId}}
                <li class="uppercase"> <a href="{{url "/pages/my-items"}}">My bookmarks</a> </li>
                {{/hasAppPermission}}
            </ul>
        </div>
    </div>
</div>
<!-- secondary header - app bar -->


<!--Need to delete these sections down-->
<div  style="display: none" id="content-asset-types">
    <div>
        {{#with navigationBar}}
            {{#each types}}
                <a class="ast-type-item" target="_self" href="{{tenantedUrl ""}}{{this.listingUrl}}">
                    {{#if value.icon}}
                        <div style="background-image:url({{url ""}}{{ui.icon}})">
                        </div>
                    {{else}}
                        <i class="{{ui.icon}}"></i>
                    {{/if}}
                    {{singularLabel}}
                </a>
            {{/each}}
        {{/with}}
    </div>
</div>
<div>
  {{> action-bar .}}
</div>





