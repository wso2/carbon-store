<!-- secondary header - app bar -->
<div id="nav" class="row wr-app-bar">
    <div class="col-md-12 wr-action-container">
        <div class="wr-asset-type-switcher">
            <div class="ctrl-asset-type-switcher">
                <div class="left-menu">
                    <nav class="navigation">
                        <a href='{{tenantedUrl ""}}/pages/top-assets' class="active home">
                            <span class="icon"><i class="fw fw-store"></i></span> <span class="left-menu-item">ALL</span>
                        </a>
                        {{#with navigationBar}}
                            {{#each types}}
                                <a href='{{tenantedUrl ""}}{{this.listingUrl}}' class="purple">
                                    <span class="icon"><i class="{{ui.icon}}"></i></span> <span class="left-menu-item">{{singularLabel}}</span>
                                </a>
                            {{/each}}
                        {{/with}}
                    </nav>
                    <div class="tags-wrapper">
                        <div class="tag-title"> Tags </div>
                        <div class="tag-content">
                            <label>Business</label>
                            <label>Comics</label>
                            <label>Communication</label>
                            <label>Education</label>
                            <label>Entertainment</label>
                            <label>Finance</label>
                            <label>Health &amp; Fitness</label>
                            <label>Media &amp; Video</label>
                            <label>Medical</label>
                            <label>Music &amp; Audio</label>
                            <label>Shopping</label>
                            <label>Social</label>
                            <label>Sports</label>
                            <label>Travel &amp; Local</label>
                            <label>Widgets</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="search">
            <div class="input-group input-wrap">
                <input  id="search"  type="text" class="form-control" placeholder="Search for...">
                <div class="input-group-btn">
                    <button class="btn btn-default wrap-input-right" id="search-button" type="button" title="Search">
                        <i class="fw fw-search" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
        <!--search--->
    </div>
    {{#unless isUserDomainAndUrlDomainDifferent}}
        <div class="site-wide-menu">
            <div class="inline-block margin-top-sm">
                {{#hasAppPermission . key="APP_MYITEMS" username=cuser.username tenantId=cuser.tenantId}}
                    <a href="{{tenantedUrl "/pages/my-items"}}" class="bookmark-link" title="{{t "My bookmarks "}}"><span class="bookmark-link-text">{{t "My bookmarks "}}</span><i class="fw fw-bookmark fw-inverse fw-lg bookmark-link-icon"></i></a>
                {{/hasAppPermission}}
            </div>
        </div>
    {{/unless}}
</div>
<!-- secondary header - app bar -->
{{> action-bar .}}

<div class="col-md-12 category-wrapper">
    {{#if assetCategoryDetails.hasCategories}}
        <div class="col-xs-1 col-sm-2 col-md-1 col-lg-1 left-col"></div>
        <div class="col-xs-10 col-sm-8 col-md-4 col-lg-10">
            <div class="category padding-top">
                <a href="#" class="ico-filter ctrl-filter-category dropdown-toggle" data-toggle="dropdown" aria-expanded="true"  id="categoryDropDown" title="All Categories">
                    {{#if assetCategoryDetails.selectedCategory}}
                        {{assetCategoryDetails.selectedCategory}}
                    {{else}}
                        <span>All Categories</span>
                    {{/if}}
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    {{#if assetCategoryDetails.selectedCategory}}
                        <li><a tabindex="-1" href="#">All Categories</a></li>
                    {{/if}}
                    {{#each assetCategoryDetails.values}}
                        <li><a tabindex="-1" href="#">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div></div>
    {{/if}}
</div>
