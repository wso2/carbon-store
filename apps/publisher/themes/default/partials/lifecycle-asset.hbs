<h1>Lifecycle - {{assets.name}}</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-xs-12 canvas-wrapper">
            <div class="lifecycle-help-wrapper">
                {{#if assets.lifecycleState}}
                <div class="label label-info pull-left">
                    <span id='state' >{{assets.lifecycleState}}</span>
                </div>
                {{/if}}
                <div class="pull-left lifecycle-help">Click on a circle to change state</div>
                <div class="clearfix"></div>
            </div>
            <div class="lifecycle-message-wrapper">
                <div class="alert alert-danger lifecycle-message" id="lifecycleMsg" role="alert" style="display: none"></div>
            </div>
            <div id='canvas'></div>
        </div>
        <div class="col-lg-6 col-xs-12">
            <h2>History</h2>
            <table id='lc-history' class="table">
            </table>
        </div>
    </div>
</div>
<div id='checklist'></div>





        <!-- Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="commentModalLabel">Add a comment</h3>
            </div>
            <div class="modal-body">
                <textarea class="modal-comment" id="commentModalText"></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
                <button id="commentModalSave" class="btn btn-primary">Submit change</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="deleteModalLabel">Delete Asset</h3>
            </div>
            <div class="modal-body">
                <p class="span12" id="deleteModalText">Are you sure you want to delete this asset permanantly?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">No</button>
                <button id="deleteModalSave" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>