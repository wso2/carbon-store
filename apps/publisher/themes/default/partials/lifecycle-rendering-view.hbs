<div class='row'>
    <div  class='col-md-7'>
        <div id='lifecycle-rendering-area' class='lifecycle-rendering-area col-md-6'>
            <svg width=500 height=600></svg>
        </div>
        <div id ='lifecycle-checklist-container' class='col-md-5' style='position:relative'>
            <div id='lifecycle-checklist'>
            </div>
            <div id='lifecycle-checklist-overlay'></div>
        </div>
        <div id='lifecycle-actions-container' class='col-md-5 float-left' style='position:relative'>
            <div id='lifecycle-comments'>
                <div class='form-group'>
                    <h3>Comment</h3>
                    <textarea id='lifecycle-comment' class='form-control' placeholder='{{t "This comment will be recored with the state transition"}}'></textarea>
                </div>
            </div>
            <div id='lifecycle-transition-inputs-ui'>
                {{> lifecycle-transition-inputs-ui .}}
            </div>
            <div id='lifecycle-notifications'>
            </div>
            <div id='lifecycle-actions'></div>
            <div id='lifecycle-actions-overlay'></div>
        </div>
    </div>
    <div class='col-md-5'>
        <div id='lifecycle-history-container' class='col-md-10 '>
            <h3>History</h3>
            <div id='lifecycle-history'>
                <img src='{{url ""}}/themes/default/img/preloader-40x40.gif' /> Loading history details ...
            </div>
        </div>
    </div>
</div>