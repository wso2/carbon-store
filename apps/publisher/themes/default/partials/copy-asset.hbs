<div class="copy" id="newVersionModal" >
    <div class="modal-dialog modal-sm">

          <h4 class="modal-title">{{t "Create new version"}}</h4>

          {{t "Version"}}: <input type="text" class="form-control es-form-control" name="new-version" id="new-version">
          <input type="hidden" id="asset-id" value="{{assets.id}}">
          <input type="hidden" id="asset-type" value="{{assets.type}}">
          <div id="alertSection" class="alert hide" role="alert"></div>
          <i class="fa fa-spinner fa-spin fa-3x hide" id="new-version-loading"></i>
          <br/>
          <button type="button" id="btn-create-version" class="es-btn es-btn-primary btn btn-primary" >{{t "Create"}}</button>
          <button type="button" id="btn-cancel-version" class="es-btn es-btn-primary btn btn-primary" >{{t "Cancel"}}</button>
    </div>
</div>