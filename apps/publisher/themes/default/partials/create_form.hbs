<form  method='post' action='{{url ""}}/apis/assets?type={{rxt.shortName}}' class="form-horizontal" id="form-asset-create" data-redirect-url='{{url ""}}/assets/{{rxt.shortName}}/list' >   
    <div class="control-group">
         {{#each assets.tables}}
            {{renderTable .}}
        {{/each}}
    </div>
    {{#if groupingFeature.isEnabled}}
    <div class="control-group">
        <h3>Versioning</h3>
        <div class="checkbox">
            <label>
                <input type='checkbox' name="_default"> {{t "Make this the default"}}                
            </label>
        </div>
    </div>
    {{/if}}
    <div id='tag-ui-container'>
        <h2 class="field-title">
            <a href="#collapseTags" aria-expanded="false" class="collapsing-h2" >
                <i class="cu-btn-exp-col btn-collapsed">{{t "Tags"}}</i>
            </a>
        </h2>
        <div class="responsive-form-container" id="collapseTags">
            {{> tag-ui-container .}}
        </div>
    </div>
    {{#if taxonomyAvailability}}
    <div id='taxonomy'>
        <h2 class="field-title">
            <a href="#collapseTaxa" aria-expanded="false" class="collapsing-h2" >
                <i class="cu-btn-exp-col btn-collapsed">{{t "Taxonomy"}}</i>
            </a>
        </h2>
        <div class="responsive-form-container" id="collapseTaxa">
            <div id="main-container">
                <input type="hidden"  value="taxonomy" name="_taxa" id="taxonomy-list" placeholder="taxonomy" class="form-control ">
                <div id="jstree-taxonomy" class="demo"></div>
            </div>

        </div>
    </div>
    {{/if}}
    <div class="clearfix"></div>
    <div class="form-group" id="saveButtons">
        <div class="col-sm-offset-2 col-sm-10">
            <input type='submit' id="btn-create-asset" class="btn btn-primary" name="addNewAssetButton" value='{{t "Create"}}'>
            <button class="btn btn-default" type="reset">{{t "Reset"}}</button>
            <input type="hidden" value="{{rxt.shortName}}" name="{{rxt.shortName}}" id="meta-asset-type">
        </div>
    </div>
</form>